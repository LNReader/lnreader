{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "babel.config.js",
    "metro.config.js"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "noUnusedLocals": true,
    "module": "ES2022",
    "paths": {
      "@components": ["src/components/index"],
      "@components/*": ["src/components/*"],
      "@database/*": ["src/database/*"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks/index"],
      "@screens/*": ["src/screens/*"],
      "@strings/*": ["strings/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"],
      "@plugins/*": ["src/plugins/*"],
      "@services/*": ["src/services/*"],
      "@navigators/*": ["src/navigators/*"],
      "@native/*": ["src/native/*"],
      "@api/*": ["src/api/*"],
      "@type/*": ["src/type/*"],
      "@specs/*": ["specs/*"]
    },
    "types": ["react-native"]
  }
}
